@using MvcOnlineCommercialAutomation.Models.Class;
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CariId</td>
            <td>@item.CariName</td>
            <td>@item.CariSurname</td>
            <td>@item.CariCity</td>
            <td>@item.CariMail</td>
            <td><a href="/Cari/DeleteCari/@item.CariId/" class="btn btn-danger">Sil</a></td>
            <td><a href="/Cari/GetCari/@item.CariId/" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Cari/CariSale/@item.CariId/" class="btn btn-default" style="background-color:lightcoral; color:white">Satış Geçmişi</a></td>
            <td></td>
        </tr>
    }
</table>
<a href="/Cari/AddCari/" class="btn btn-primary">Yeni Cari Ekle</a>

