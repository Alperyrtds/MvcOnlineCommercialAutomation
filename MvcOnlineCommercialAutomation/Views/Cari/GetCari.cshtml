@model MvcOnlineCommercialAutomation.Models.Class.Cariler
@{
    ViewBag.Title = "GetCari";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Cari Güncelleme Sayfası</h2>
<br />

@using (Html.BeginForm("UpdateCari", "Cari", FormMethod.Post))
{
    @Html.HiddenFor(x => x.CariId)
    @Html.Label("Cari Adı")
    @Html.TextBoxFor(x => x.CariName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CariName, "", new { @style = "color:red" })
    <br />
    @Html.Label("Cari Soyadı")
    @Html.TextBoxFor(x => x.CariSurname, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CariSurname, "", new { @style = "color:red" })

    <br />
    @Html.Label("Cari Şehir")
    @Html.TextBoxFor(x => x.CariCity, new { @class = "form-control" })
    <br />
    @Html.Label("Cari Mail")
    @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control" })
    <br />

    @Html.Label("Cari Durum")
    @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Kaydet</button>
}