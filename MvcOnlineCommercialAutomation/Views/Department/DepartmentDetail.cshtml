@using MvcOnlineCommercialAutomation.Models.Class
@model List<Employee>
@{
    ViewBag.Title = "DepartmentDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Departman Detay Sayfası</h2>
<br />
<ol class="breadcrumb mb-4" >
    <li class="breadcrumb-item active"><b>Departman Adı</b>: @ViewBag.v1</li>
</ol>

<table class="table table-hover">
    <tr>
        <th>Personel ID</th>
        <th>Personel Ad</th>
        <th>Personel Soyad</th>
        <th>Personel Görsel</th>
        <th>Personel Satışları</th>
    </tr>
   @foreach (var item in Model)
   {
       <tr >
           <td>@item.EmployeeId</td>
           <td>@item.EmployeeName</td>
           <td>@item.EmployeeSurname</td>
           <td>@item.EmployeeImage</td>
           <td><a href="/Department/DepartmentEmployeeSale/@item.EmployeeId" class="btn btn-default" style="background-color:chocolate; color:white;">Satışlar</a></td>
           
       </tr>
   }
</table>

