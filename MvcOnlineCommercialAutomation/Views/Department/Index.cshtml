@using MvcOnlineCommercialAutomation.Models.Class
@model List<Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Departman Id</th>
        <th>Departman Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.DepartmentId</td>
            <td>@item.DepartmentName</td>
            <td><a href="/Department/DeleteDepartment/@item.DepartmentId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Department/GetDepartment/@item.DepartmentId" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Department/DepartmentDetail/@item.DepartmentId" class="btn btn-default" style="background-color:lightcoral; color:white;">Detaylar</a></td>
            
        </tr>
    }
</table>
<br />
<a href="/Department/AddDepartment/" class="btn btn-primary">Yeni Departman Ekle</a>

